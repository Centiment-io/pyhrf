#         print core.get_data_file_name(f)


@click.command()
@click.option('--base-name', is_flag=True, default=False, help='Display only basenames')
def list_datafiles(base_name):
    """List all data file names shipped with pyhrf"""
    for f in core.list_data_file_names():
        if base_name:
            print(f)
        else:
            print(core.get_data_file_name(f))


if __name__ == '__main__':
    list_datafiles()