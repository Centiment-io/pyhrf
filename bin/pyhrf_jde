#!/usr/bin/env python2
# -*- coding: utf-8 -*-

import click
import os


@click.command()
@click.argument('tr', nargs=1, type=float)
@click.argument('parcels_file', nargs=1)
@click.argument('onsets_file', nargs=1)
@click.argument('bold_data_file', nargs=-1)
@click.option('-c', '--contrasts-file', help='JSON file defining the contrasts')
@click.option('--dt', type=float, help='time resolution of the HRF (if not defined here or in the script, it is automatically computed)')
@click.option('-l', '--hrf-duration', type=float, default=25.0, show_default=True, help='time length of the HRF (in seconds)')
@click.option('-o', '--output-dir', default=os.getcwd(), show_default=True, help='output directory (created if needed)')
@click.option('--nb-iter-min', type=int, default=5, show_default=True, help='minimum number of iterations of the VEM algorithm')
def jde(tr, parcels_file, onsets_file):
    """Run an fMRI analysis using the JDE-VEM framework.

    All arguments (even positional ones) are optional and default values are
    defined in the beginning of the script
    """
    click.echo('{}{}{}'.format(tr, parcels_file, onsets_file))


if __name__ == '__main__':
    jde()





